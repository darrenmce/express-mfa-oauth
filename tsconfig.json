{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": false,
    "paths": {
      "*": [
        "node_modules/*",
        "src/@types/*"
      ]
    },
    "typeRoots": [
      "@types",
      "node_modules/@types",
      "./src/@types"
    ],
    "lib": ["es6", "dom", "esnext"]
  },
  "include": [
    "src/index.ts",
    "@types/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}